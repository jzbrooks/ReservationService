root = true

[*]
charset=utf-8
end_of_line=lf
trim_trailing_whitespace=true
insert_final_newline=true
indent_style=space # dare I commit this to be judged by interviewers?
indent_size=4

[*.{kt, kts}]
max_line_length=120
ij_kotlin_allow_trailing_comma=true
ij_kotlin_allow_trailing_comma_on_call_site=true

[*.{json, xml}]
indent_size=2
